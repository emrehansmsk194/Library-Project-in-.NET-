@model IEnumerable<LibraryWeb.Models.DTO.EventDTO>
<html>
	<head>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	</head>
	<body>
		<style>
			img{
				height: 300px;
				object-fit: cover;
			}
		</style>
		<div class="container mt-5 px-4 px-lg-5">
			<div class="d-flex justify-content-center align-items-center mt-4">
				<h1 class="bg-dark text-white text-center " style="margin-top:1rem;" >Library Events</h1>
			</div>

			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center ">
			@foreach(var events in Model)
			{
				<div class="col mt-5">
					<div class="card">
						<img src="@events.CoverImageUrl" class="card img-top" alt="event image" />
						<div class="card-body" id = "divFooter-@events.EventId">
							<h5 class="card-title text-dark fw-bold">@events.EventName</h5>
							<button class="btn btn-light text-dark w-100" id ="myButton-@events.EventId">View Details<i class="bi bi-chevron-double-down" onclick="viewDetails(@events.EventId)"></i></button>
							<p class="card-text text-dark" id ="detail-@events.EventId" style="display:none;">@events.Description</p>
						</div>
						<div class="card-footer">
							<p class="card-text text-dark text-center">@events.Date.ToShortDateString()</p>
						</div>
					</div>
				</div>
			}
		</div>
		</div>
		<script src="~/js/Events.js"></script>
	</body>
</html>