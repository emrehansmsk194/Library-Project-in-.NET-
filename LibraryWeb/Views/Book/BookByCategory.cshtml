@model IEnumerable<LibraryWeb.Models.DTO.BookDTO>

<html>
<head>
    <link rel="stylesheet" href="~/css/Cards.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <style>
        .carousel {
            width: 100vw; 
            max-width: 100%;
            margin: 0 auto; 
        }


        carousel-item img {
            width: 100vw;
            height: auto;
            object-fit: cover;
        }
    </style>

<div class="container-fluid mt-5 ">
    <div id="carouselExampleCaptions" class="carousel slide bg-white">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/library-869061_1280.jpg" class="d-block w-100" alt="..." height="300" width="120">
                <div class="carousel-caption d-none d-md-block m-auto">
                        <h1>Unlimited <span class="text-warning">Reources</span></h1>
                        <p>Explore the endless possibilities within our library.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/library-869061_1280.jpg" class="d-block w-100" alt="..." height="300" width="120">
                <div class="carousel-caption d-none d-md-block m-auto">
                        <h1>Your Gateway to <span class="text-warning">Endless Knowledge</span> </h1>
                        <p class="text-white ">Expand your mind with our curated collection of books.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/library-869061_1280.jpg" class="d-block w-100" alt="..." height="300" width="120">
                <div class="carousel-caption d-none d-md-block m-auto">
                        <h1>Where Every Book Tells a <span class="text-warning">Story</span></h1>
                        <p>Dive into our collection and discover your next great read.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<section class="mt-5" >
	<div class="container px-4 px-lg-5 mt-2">
		<h1 class=" text-dark text-center">@ViewBag.CategoryName</h1>
		<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
			@foreach (var book in Model)
			{
				<div class="col mt-7">

					<div class="card bg-white custom-card " style="width: 15rem;">
						<img src="@book.CoverImageUrl" alt="Book Image" class="card-img-top">
						<div class="card-body ">
							<h5 class="card-title text-dark text-center fw-bold">@book.Name</h5>
							<p class=" card-text text-dark ">PageCount : @book.PageCount</p>
							<p class=" card-text text-dark ">Author: @book.Author</p>
							<p class=" card-text text-dark ">Location: @book.LocationFloor-@book.LocationShelf</p>

						</div>
					</div>

				</div>
			}
		</div>
	</div>
</section>
</body>
</html>